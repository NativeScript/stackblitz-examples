{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@stackblitz/nativescript-battery": [
        "../../../libs/nativescript-battery/src/index.ts"
      ]
    }
  },
  "include": ["./src/**/*.tsx?", "../../../libs/nativescript-battery/**/*.ios.ts", "../../../libs/nativescript-battery/**/*.android.ts"],
  "files": ["./references.d.ts"],
  "exclude": ["node_modules", "platforms"]
}
